<?xml version="1.0"?>
<FamilyDefinition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
	<Name>XMC4800</Name>
	<DeviceRegex>^XMC48.*</DeviceRegex>
	<FamilySubdirectory>XMC4800</FamilySubdirectory>
	<PrimaryHeaderDir>$$BSPGEN:INPUT_DIR$$</PrimaryHeaderDir>
	<StartupFileDir>$$BSPGEN:INPUT_DIR$$\CMSIS\Infineon\XMC4800_series\Source\GCC\startup_XMC4800.S</StartupFileDir>
	<Subfamilies></Subfamilies>
	<ConfigurableProperties>
        <PropertyGroups>
          <PropertyGroup>
           </PropertyGroup>
        </PropertyGroups>
      </ConfigurableProperties>
	  	<CoreFramework>
	  	<CopyJobs>
				<CopyJob>
					<SourceFolder>$$BSPGEN:INPUT_DIR$$\CMSIS\Infineon\XMC4800_series</SourceFolder>
					<FilesToCopy>*.h;*.c</FilesToCopy>
					<TargetFolder>Infineon</TargetFolder>
					<AutoIncludeMask>*.h</AutoIncludeMask>	
					<Patches>
						<Patch xsi:type="InsertLines">
							<FilePath>source\system_XMC4800.c</FilePath>
							<AfterLine>extern uint32_t __Vectors;</AfterLine>
							<InsertedLines>
								<string>#define __Vectors  g_pfnVectors</string>
							</InsertedLines>
						</Patch>					
						<Patch xsi:type="ReplaceLine">
							<FilePath>source\system_XMC4800.c</FilePath>
							<OldLine>extern uint32_t __Vectors;</OldLine>
							<NewLine>extern uint32_t g_pfnVectors;</NewLine>
						</Patch>
						<Patch xsi:type="ReplaceLine">
							<FilePath>include\XMC4800.h</FilePath>
							<OldLine>  __I  uint32_t  DEBUG;                             /*!&lt; (@ 0x5000C024) Debug Register                                         */</OldLine>
							<NewLine>  __I  uint32_t  DEBUG_;                             /*!&lt; (@ 0x5000C024) Debug Register                                         */</NewLine>
						</Patch>
					</Patches>
				</CopyJob>			
			</CopyJobs>	
		</CoreFramework>
		<AdditionalSystemVars>
			<SysVarEntry>
				<Key>com.sysprogs.bspoptions.xmcdev</Key>
				<Value>XMC4_C</Value>
			</SysVarEntry>
		</AdditionalSystemVars>
</FamilyDefinition>
