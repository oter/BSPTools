<?xml version="1.0"?>
<FamilyDefinition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
	<Name>LPC17xx</Name>
	<DeviceRegex>^LPC17.*</DeviceRegex>
	<FamilySubdirectory>LPC17xx_40xx</FamilySubdirectory>
	<PrimaryHeaderDir>$$BSPGEN:INPUT_DIR$$</PrimaryHeaderDir>
	<StartupFileDir>$$BSPGEN:INPUT_DIR$$\lpc17xx\startup_code</StartupFileDir>
	<Subfamilies></Subfamilies>
	<ConfigurableProperties>
        <PropertyGroups>
          <PropertyGroup>
           </PropertyGroup>
        </PropertyGroups>
      </ConfigurableProperties>
	  	<CoreFramework>
	  	<CopyJobs>
				<CopyJob>
					<SourceFolder>$$BSPGEN:INPUT_DIR$$\lpc17xx</SourceFolder>
					<FilesToCopy>-*sys_config.h;-*startup_code\*;-*usbd_lib\*;*.h;*.c</FilesToCopy>
					<TargetFolder>lpc_chip_17xx</TargetFolder>
					<PreprocessorMacros>$$com.sysprogs.nxp.device_family$$;CORE_M3;$$com.sysprogs.nxp.ph.dma$$</PreprocessorMacros>
					<AutoIncludeMask>Common\*.h;*.h</AutoIncludeMask>	
					<SimpleFileConditions>
						<string>\\eeprom.c$: $$com.sysprogs.nxp.ph.eedef$$ == EEPROMDEF_IS</string>					
					</SimpleFileConditions>
				</CopyJob>			
			</CopyJobs>	
		</CoreFramework>
		<Subfamilies>
	
		<MCUClassifier>
			<VariableName>com.sysprogs.nxp.device_family</VariableName>
			<Required>true</Required>
			<Options>				
				<Option>
					<Value>CHIP_LPC175X_6X</Value>
					<Regex>^LPC17[56].*</Regex>
				</Option>
				<Option>
					<Value>CHIP_LPC177X_8X</Value>
					<Regex>^LPC17[78].*</Regex>
				</Option>			
			</Options>
		</MCUClassifier>
			<MCUClassifier>
			<VariableName>com.sysprogs.nxp.ph.eedef</VariableName>
			<Required>true</Required>
			<Options>				
				<Option>
					<Value>EEPROMDEF_IS</Value>
					<Regex>^LPC17[56].*</Regex>
				</Option>
				<Option>
					<Value>EEPROMDEF_OTHER</Value>
					<Regex>^LPC17[78].*</Regex>
				</Option>			
			</Options>
		</MCUClassifier>
			<MCUClassifier>
			<VariableName>com.sysprogs.nxp.ph.dma</VariableName>
			<Required>true</Required>
			<Options>				
				<Option>
					<Value>SDC_DMA_DESABLE</Value>
					<Regex>^LPC17[56].*</Regex>
				</Option>
				<Option>
					<Value>SDC_DMA_ENABLE</Value>
					<Regex>^LPC17[78].*</Regex>
				</Option>			
			</Options>
		</MCUClassifier>
	</Subfamilies>
</FamilyDefinition>
